<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.travel.sibar.sibartravel.PlaceDetail">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnMapsDetail"
        android:enabled="true"
        android:drawableLeft="@drawable/maps"
        android:text="MAPS"
        android:layout_marginRight="16dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentTop="true"
        android:id="@+id/imgPlaceDetail"
        android:src="@drawable/maps"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Gunung Ciremai"
        android:textSize="30dp"
        android:layout_marginTop="150dp"
        android:id="@+id/txtPlaceDetail"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/imgPlaceDetail"
        android:hint="put some description here"
        android:id="@+id/txtDescriptionDetail"
        android:padding="16dp"
        android:textColor="#ef5350" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDescriptionDetail"
        android:id="@+id/lvActDetail"
        android:background="@color/accent_material_dark">

    </ListView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background2"/>


</RelativeLayout>
